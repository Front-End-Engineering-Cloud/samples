{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "baseUrl": "./",
    "lib": ["es2015", "dom"],
    "jsx": "react",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "bower_components"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
